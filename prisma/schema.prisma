generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String        @id @default(uuid())
  email       String        @unique
  name        String?
  googleId    String?       @unique
  profileUrl  String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  Note        Note[]
  KeywordPack KeywordPack[]
}

model Note {
  id                String    @id @default(uuid())
  title             String
  content           String?   @db.Text
  durationInSeconds Int       @default(0)
  isPublic          Boolean   @default(false)
  recordingUrl      String?
  recordingStatus   String    @default("pending") // pending, recording, completed, failed
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  authorId          String
  author            User      @relation(fields: [authorId], references: [id])

  @@index([authorId])
  @@index([recordingStatus])
}

model KeywordPack {
  id              String   @id @default(uuid())
  name            String
  keywords        Json
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  isPublic        Boolean  @default(false)
  previewImageUrl String?

  authorId String
  author   User   @relation(fields: [authorId], references: [id])
}
