generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                    String             @id @default(uuid())
  email                 String             @unique
  name                  String?
  googleId              String?            @unique
  profileUrl            String?
  role                  String?            // 사용자 역할
  isActive              Boolean            @default(false) // 회원가입 완료 여부
  savedKeywordPackIds   String[]           @default([]) // 저장한 공개 KeywordPack ID 목록
  createdAt             DateTime           @default(now())
  updatedAt             DateTime           @updatedAt
  Note                  Note[]
  KeywordPack           KeywordPack[]
  ExternalResource      ExternalResource[]
}

model Note {
  id                 String    @id @default(uuid())
  title              String
  content            String?   @db.Text
  aiSummary          String?   @db.Text
  speakers           Json?
  durationInSeconds  Int       @default(0)
  isPublic           Boolean   @default(false)
  recordingUrl       String?
  recordingStatus    String    @default("pending") // pending, recording, completed, failed
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  lastUpdated        DateTime  @default(now())
  authorId           String
  author             User      @relation(fields: [authorId], references: [id])
  keywordPackIds     String[]  @default([])
  externalResourceIds String[] @default([])

  @@index([authorId])
  @@index([recordingStatus])
  @@index([lastUpdated])
}

model KeywordPack {
  id              String   @id @default(uuid())
  name            String
  keywords        Json     // [{ name: string, description: string, koreanPronunciation?: string, synonyms?: string[] }]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  isPublic        Boolean  @default(false)
  previewImageUrl String?

  authorId String
  author   User   @relation(fields: [authorId], references: [id])
}

model ExternalResource {
  id             String   @id @default(uuid())
  url            String
  displayUrl     String
  title          String   @db.VarChar(10)
  logoUrl        String?
  scrapedContent String?  @db.Text
  metadata       Json?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  authorId String
  author   User   @relation(fields: [authorId], references: [id])

  @@index([authorId])
}
